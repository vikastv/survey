<div class="survey_container">
  <div class="header">
    <h3>Surveys List</h3>
  </div>
  <div class="clear"></div>

  <div class="survey_list">
    <table class="table table-striped table-bordered container tablesorter">
      <thead>
        <tr  class="tablesorter-headerRow " role="row">
          <th>Sl.No</th>
          <th>Title</th>
        </tr>
      </thead>
      <tbody>
        <% @surveys.each_with_index do |survey, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= link_to survey.name, answer_home_index_path(:survey_id => survey.id) , :method=> :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @surveys, renderer: BootstrapPagination::Rails %>
  </div>
